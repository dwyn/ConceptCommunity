<div class="concept-form">

  <h1 class= "text-center">New Concept</h1><br>

  <%= form_for @concept do |f| %>
    <div class="field row">
      <%= f.label :title, class: "h4 col-2 col-form-label"%>
      <%= f.text_field :title, class: "col-10 form-control" %>
    </div>
    <br>

    <div class="field row">
      <%= f.label :description, "Tell us about your app idea!" %> <br>
      <%= f.text_area :description, class: "form-control col-9" %>
    </div>
    <br>

    <div class="field row">
      <%= f.label :resource_links, "Share an URI that further explains your idea. Or don't. Either way is fine." %> <br>
      <%= f.text_area :resource_links, class: "form-control col-9" %>
    </div>
    <br>

    <br>

    <%= f.submit "Submit Concept!", :class=> "btn btn-primary" %>

  <% end %>

</div>
