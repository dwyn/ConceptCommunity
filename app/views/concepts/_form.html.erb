<h1 class= "text-center">New Concept</h1><br>

<div class="row">
  <div class="center-block col-md-6 col-md-offset-3 text-center">
      <%= form_for @concept do |f| %>

      <div class="form-group">    
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :description, "Tell us about your app idea!" %> <br>
        <%= f.text_area :description%>
      </div>

      <div class="form-group">
        <%= f.label :resource_links, "Share an URI that further explains your idea. Or don't. Either way is fine." %> <br>
        <%= f.text_area :resource_links, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :section %> <br>
        <%= f.collection_check_boxes :section_ids, Section.all, :id, :title %>
      </div>

      <div class="form-group">
        <%= f.label :language %> <br>
        <%= f.collection_check_boxes :language_ids, Language.all, :id, :name %> <br>
      </div>

      <div class="form-group">
        <%= f.submit "Submit Concept!", :class=> "btn btn-primary" %>
      </div>

      <% end %>
  </div>
</div>