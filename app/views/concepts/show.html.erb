<%- Possibly Use this for displaying errors -%>

<% if false %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Concept Saved!</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<section class="concept-show">
</section>


<h2 class= "concept-title text-center"><%= @concept.title.upcase %></h2> <br>

<div class="row col-12">
  <div class="col-9 concept-description">
    <strong>Description</strong>
    <p><%= @concept.description %></p>
  </div>

  <div class="col-9 concept-description text-center">
    <strong>Resource Links</strong> <br>
    <p> @concept.resource_links </p>
  </div>
</div>

<div class="col-12 text-center">
  <%= link_to "Edit Concept", edit_concept_path(@concept), class: "col-2 btn btn-info"  %>
  <%= link_to 'Delete Concept', concept_path(@concept), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger col-2' %>
</div>
