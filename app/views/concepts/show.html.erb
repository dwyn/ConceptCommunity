<div class="container">
  <div class="col-md-6" id="show-table">
    <h2 class= "concept-title text-center"><%= @concept.title.upcase %></h2> <br>

    <strong>Description</strong>
    <p><%= @concept.description %></p>

    <% if @concept.favorited %>
      <p>Favoritedâ™¥! (Saved to your favorites list) </p>
    <% end %>

    <div>
      <%= link_to "Edit Concept", edit_user_concept_path(@user, @concept), class: "my-edit-button"  %>
      <%= button_to "Delete Concept", user_concept_path(@user, @concept), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'my-delete-button' %>
    </div>
  </div>
</div>