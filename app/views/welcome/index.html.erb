<div class="container">
	<div class="row">
    <div class="center-box col-md-8" id="show-table">
        <div>
          <h4 class="concept-title"><%= @concept.title %></h4>
          <h5 class="concept-user">By: <%= @concept.user.name.capitalize %>!</h5>
        </div>
        <div>
          <p class="concept-desc"><%= @concept.description %></p>
          <%= link_to "Show New Concept", root_path, class: "nextConcept col-4 btn btn-info", id: "nextConcept" %>
        </div>
    </div>
  </div>
</div>