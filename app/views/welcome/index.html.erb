<div class="container">
  <div class="col-md-6" id="show-table">
    <div class="info">
      <h4> <%= link_to "#{@concept.title}", user_concept_path(@concept.user_id, @concept.id),  class:"concept-title" %> </h4>
      <h5> By: <%= link_to "#{@concept.user.name.capitalize}", user_path(@user), class: "concept-user", id: "show-user-concepts" %>!</h5>
      <p class="concept-desc"><%= @concept.description %></p>
      <%= link_to "Show New Concept", root_path, class: "nextConcept my-button" %>
    </div>

    <div id="button">
    </div>
  </div>

  <div class="col-md-3" id="user-concepts-show-table">
  </div>
</div>